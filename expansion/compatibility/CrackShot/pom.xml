<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.SirBlobman.combatlogx.expansion.compatibility</groupId>
        <artifactId>compatibility-parent</artifactId>
        <version>11.0.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>CrackShot</artifactId>
    <name>Compatibility Expansion: CrackShot</name>
    <description>An expansion for CombatLogX that adds compatibility with the CrackShot plugin.</description>

    <repositories>
        <!-- SpigotMC Repository -->
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Spigot API -->
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- CombatLogX API -->
        <dependency>
            <groupId>com.SirBlobman.combatlogx</groupId>
            <artifactId>api</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- CrackShot -->
        <!-- Requires local installation or dummy API -->
        <dependency>
            <groupId>com.SirBlobman.combatlogx.dummy</groupId>
            <artifactId>dummy-CrackShot</artifactId>
            <version>0.98.9</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>CrackShot Compatibility</finalName>
    </build>
</project>