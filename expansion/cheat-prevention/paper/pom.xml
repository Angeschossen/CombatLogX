<project>
    <modelVersion>4.0.0</modelVersion>
    <version>11.0.0.0-SNAPSHOT</version>

    <parent>
        <groupId>com.github.sirblobman.combatlogx.expansion</groupId>
        <artifactId>cheat-prevention-parent</artifactId>
        <version>11.0.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <groupId>com.github.sirblobman.combatlogx.expansion.cheat.prevention</groupId>
    <artifactId>paper</artifactId>
    <name>Expansion: Cheat Prevention Paper</name>
    <description>A module for the Cheat Prevention expansion for Paper servers.</description>

    <properties>
        <spigot.version>1.19.2-R0.1-SNAPSHOT</spigot.version>
    </properties>

    <repositories>
        <!-- PaperMC Repository -->
        <repository>
            <id>papermc</id>
            <url>https://repo.papermc.io/repository/maven-public/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Paper API -->
        <dependency>
            <groupId>io.papermc.paper</groupId>
            <artifactId>paper-api</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- CheatPrevention Abstract -->
        <dependency>
            <groupId>com.github.sirblobman.combatlogx.expansion.cheat.prevention</groupId>
            <artifactId>abstract</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
</project>
