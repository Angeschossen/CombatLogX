<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.github.sirblobman.combatlogx.expansion.compatibility</groupId>
        <artifactId>compatibility-parent</artifactId>
        <version>11.0.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>PlayerParticles</artifactId>
    <name>Compatibility Expansion: PlayerParticles</name>
    <description>An expansion for CombatLogX that adds support for the PlayerParticles plugin.</description>

    <repositories>
        <!-- Rosewood Releases Repository -->
        <repository>
            <id>rosewood-releases</id>
            <url>https://repo.rosewooddev.io/repository/public-releases/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- PlayerParticles -->
        <dependency>
            <groupId>dev.esophose</groupId>
            <artifactId>playerparticles</artifactId>
            <version>8.2</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>PlayerParticles Compatibility</finalName>
    </build>
</project>
