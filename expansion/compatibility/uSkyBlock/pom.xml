<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.github.sirblobman.combatlogx.expansion.compatibility</groupId>
        <artifactId>compatibility-parent</artifactId>
        <version>11.0.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>uSkyBlock</artifactId>
    <name>Compatibility Expansion: uSkyBlock</name>
    <description>An expansion for CombatLogX that adds compatibility with the uSkyBlock plugin.</description>

    <repositories>
        <!-- uSkyBlock Repository -->
        <repository>
            <id>uskyblock</id>
            <url>https://www.uskyblock.ovh/maven/uskyblock/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencies>
        <!-- uSkyBlock API -->
        <dependency>
            <groupId>com.github.rlf</groupId>
            <artifactId>uSkyBlock-API</artifactId>
            <version>2.8.9</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>uSkyBlock Compatibility</finalName>
    </build>
</project>