            <groupId>com.shampaggon</groupId>
            <artifactId>crackshot</artifactId>
            <version>0.98.11</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>CrackShot Compatibility</finalName>
    </build>
</project>
